<html lang="en">
<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/nav.ejs') %>

            <div class="blogs">
                <% if(blogs.length > 0 ){%>
                    <% blogs.forEach(blog =>{ %>
                        <a class="single" href="/blogs/<%= blog._id %> ">
                            <h3 class="title">
                                <%= blog.title %>
                            </h3>
                            <p class="snippet">
                                <%= blog.snippet %>
                            </p>
                            <h1 class="body">
                                <%= blog.body %>
                            </h1>
                        </a>
                        <% }) %>
                            <%} else{%>
                                <p>the are no bloges to display ...</p>
                                <% } %>
            </div>
            <div class="blogs content">
                <h2>all blogs</h2>
            </div>
            <%- include('../partials/footer.ejs') %>
    </body>

</html>